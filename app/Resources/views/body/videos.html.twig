{% extends "base.html.twig" %}

{% block body %}
    <div class="container">
        <div class="player">
            <iframe src="https://www.youtube.com/embed/010KyIQjkTk?ecver=2" allowfullscreen=""></iframe>
        </div>
        <div class="list_videos">

    {% for value in videos %}
                <a href="/{{ tutorial[0].id }}/tutorial/{{ value.id }}"><div class="single_video">{{ value.title }}</div></a>
    {% endfor %}

        </div>
        <div class="button_buy">
            <a href="/buy/{{ tutorial[0].id }}"><button class="button buy" style="vertical-align:middle">Kup</button></a>
        </div>

    </div>

    <br>
    <div class="container">
        <div>{{ form_start(form) }}
            <div class="pull-left">
                {{ form_widget(form.content) }}
            </div>
            <div class="pull-left">
                {{ form_widget(form.Skomentuj) }}
            </div>
            {{ form_end(form) }}
            <br>
            {% if app.session.flashBag.has('info') %}
                <div class="alert alert-success">
                    {% for msg in app.session.flashBag.get('info') %}
                        {{ msg }}
                    {% endfor %}
                </div>
            {% endif %}
        </div>
            {% for value in comments %}
                <div class="comment dashed-border">
                    <div class="comment-user">{{ value.user.name }}</div>
                    <div class="comment-date">{{ value.data|date('H:i:s Y.m.d') }}</div>
                    <div class="comment-content">
                            {{ value.content }}
                    </div>
                </div>
            {% endfor %}
    <div>

{% endblock body %}