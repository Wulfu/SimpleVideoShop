{% extends "base.html.twig" %}

{% block body %}
    <div class="container bottom-border">
        {% if not tutorials %}
           <p class="alert">Twój koszyk jest pusty</p>
        {% else %}
            {% for tutorial in tutorials %}
               <div class="basket">
                   <div class="basket-title">
                       {{ tutorial[0].title }}
                   </div>
                   <a class="basket-button" href="{{ path('delete_from_busket', {'id': tutorial[0].id}) }}">
                       Usuń z koszyka
                   </a>
               </div>
                <br/>
            {% endfor %}
            <a class="pull-right" href="/realizacja"><button class="button realizuj" style="vertical-align:middle">Realizuj zamówienie</button></a>
        {% endif %}

    </div>
{% endblock body %}
